{% extends 'menu.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

	{% if app.user != null %}
        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
            <div class="row">
                <ol class="breadcrumb">
                    <li><a href="/"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                 </ol>
            </div>



            <ul class="nav nav-pills">
                <li><a href="/evenement/nouveau">Ajouter un évènement</a></li>
                <li><a href="/visualisation/performance">Visualiser vos performances</a></li>
                <li><a href="/performance/nouveau">Créer une performance</a></li>
            </ul>

             {% if allAbsence == null %}
                <p> Aucun évènement de prévu </p>
            {% endif %}
            {% if allAbsence != null %}


                <div class="row">
                    <div>
                     <div class="panel panel-default">
                        <div class="panel-heading">Mes évenements</div>
                        <div class="table-responsive">
                            <table class="table" data-toggle="table"   data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                                <thead>
                                <tr>
                                    <th data-field="name" data-checkbox="true">Nom</th>
                                    <th data-field="data-date-format" data-sortable="true">Date début</th>
                                    <th data-field="data-date-format"  data-sortable="true">Date fin</th>
                                    <th data-field="name"  data-sortable="true"></th>
                                </tr>
                                {% for absence in allAbsence %}
                                    <tr>
                                        <td>{{ absence.absNom }}</td>
                                        <td>{{ absence.absDatedebut|date("d/m/Y") }}</td>
                                        <td>{{ absence.absDatefin|date("d/m/Y") }}</td>
                                        <td><input type="button" onclick="location.href='/evenement/{{ absence.absId }}';" value="Modifier" /><input type="button" onclick="location.href='/supprimer/evenement/{{ absence.absId }}';" value="Supprimer" /></td>
                                    </tr>
                                {% endfor %}
                                </thead>
                            </table>
                        </div>
                     </div>
                    </div>
                </div><!--/.row-->
            {% endif %}
        </div>

	{% endif %}
{% endblock %}