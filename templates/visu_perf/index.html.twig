{% extends 'menu.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
 {{ parent() }}
    {% if app.user != null %}
        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
            <div class="row">
                <ol class="breadcrumb">
                    <li><a href="/"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                    <li class="active">Mes Performances</li>
                </ol>
             </div>

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Gestion des performances</h1>
                </div>
            </div><!--/.row-->


            <div class="row">
                <nav class="navbar navbar-left navbar-toggler" role="navigation" style="background-color: #5DBCD2">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <ul class="user-menu">
                                <li><a href="/performance/nouveau"><svg class="glyph stroked plus sign"><use xlink:href="#stroked-plus-sign"></use></svg> Ajouter une nouvelle performance </a></li>
                            </ul>
                        </div>
                    </div>
                </nav>
             </div>



            {% if allPerf == null %}
                <p> Aucun évènement de prévu </p>
            {% endif %}
            {% if allPerf != null %}
                <div class="row">
                    <div>
                        <div class="panel panel-default">
                            <div class="panel-heading">Mes performances</div>
                            <div class="table-responsive">
                                <table class="table" data-toggle="table"   data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                                    <thead>
                                        <tr>
                                            <th>Type compétition</th>
                                            <th>Echelle compétition</th>
                                            <th>Localisation compétition</th>
                                            <th>Epreuve</th>
                                            <th>Catégorie</th>
                                            <th>Importance</th>
                                            <th>Date début</th>
                                            <th>Date fin</th>
                                            <th>Lieu</th>
                                            <th>Résultat</th>
                                            <th>Ressenti</th>
                                            <th></th>
                                         </tr>
                                        {% for performance in allPerf %}
                                            <tr>
                                                <td>{{ performance.perFktypecompetition.typcomNom }}</td>
                                                <td>{{ performance.perFkechellecompetition.echcomNom }}</td>
                                                <td>{{ performance.perFklocalisationcompetition.loccomNom }}</td>
                                                <td>{{ performance.perFkjointuresport.joispoFkepreuve.eprNom }}</td>
                                                <td>{{ performance.perFkjointuresport.joispoFkcategorie.catNom }}</td>
                                                <td>{% if performance.perImportance == 1 %}
                                                        {{ "Forte" }}
                                                    {% else %}
                                                        {{ "Basse" }}
                                                    {% endif %}
                                                </td>
                                                <td>{{ performance.perDatedebut|date("d/m/Y") }}</td>
                                                <td>{{ performance.perDatefin|date("d/m/Y") }}</td>
                                                <td>{{ performance.perLieu }}</td>
                                                <td>
                                                {% if performance.perFkresultat == null %}
                                                    {{ "Non renseigné" }}
                                                {% else %}
                                                    {{ performance.perFkresultat.resNom }}
                                                {% endif %}</td>
                                                <td>{{ performance.perRessenti }}</td>
                                                <td><p data-placement="top" data-toggle="tooltip" title="Modifier"><button  onclick="location.href='/performance/{{ performance.perId }}';" class="btn btn-warning btn-xs" data-title="Edit" data-toggle="modal" data-target="Edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                                                <td><p data-placement="top" data-toggle="tooltip" title="Supprimer"><button  onclick="location.href='/supprimer/performance/{{ performance.perId }}';" class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                                        </tr>
                                    {% endfor %}
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div><!--/.row-->
            {% endif  %}
        </div>
    {% endif %} 

{% endblock %}

