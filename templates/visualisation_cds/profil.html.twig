{% extends 'menu.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
 {{ parent() }}
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="/"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
        </ol>
    </div>
    {% if app.user != null %}
        {% if allUtilisateur == null %}
            <p> Aucun utilisateur</p>
        {% endif %}
        {% if allUtilisateur != null %}
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Département</th>
                <th>Sport</th>
            </tr>
            <br>
            {% for utilisateur in allUtilisateur %}
                <tr>
                    <a href="/profil/{{ utilisateur.utiId }}">
                    <td>{{ utilisateur.utiNom }}</td>
                    <td>{{ utilisateur.utiPrenom }}</td>
                    <td>{{ utilisateur.utiEmail }}</td>
                    <td>{{ utilisateur.utiFkdepartement.depNom }}</td>
                    <td>{{ utilisateur.utiFksport.spoNom }}</td>
                    </a>
                </tr>
                <br>
            {% endfor %}
        {% endif %}
    {% endif %}
    </div>

{% endblock %}